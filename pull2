local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/liebertsx/Tora-Library/main/src/library",true))()
local tab = library:CreateWindow("Utilities")
local folder = tab:AddFolder("Enemy Control")

-- Default bring distance
local bringDistance = 50
local bringEnabled = false

-- TextBox for distance
folder:AddBox({
    text = "Bring Distance",
    flag = "bring_distance",
    value = tostring(bringDistance),
    callback = function(val)
        local num = tonumber(val)
        if num then
            bringDistance = num
        end
    end
})

-- Teleport all enemy characters within bringDistance in front of the player
local function bringEnemies()
    local localPlayer = game:GetService("Players").LocalPlayer
    local myChar = localPlayer.Character
    local myRoot = myChar and myChar:FindFirstChild("HumanoidRootPart")
    if not myRoot then return end

    for _, player in ipairs(game:GetService("Players"):GetPlayers()) do
        if player ~= localPlayer then
            local char = player.Character
            local root = char and char:FindFirstChild("HumanoidRootPart")
            if root and (root.Position - myRoot.Position).Magnitude <= bringDistance then
                -- 5 studs in front of the LOCAL player
                local offset = myRoot.CFrame.LookVector * 5
                root.CFrame = CFrame.new(myRoot.Position + offset)
            end
        end
    end
end

-- Toggle for enabling/disabling bring
folder:AddToggle({
    text = "Bring nearest enemy",
    flag = "bring_enemy_toggle",
    state = false,
    callback = function(state)
        bringEnabled = state
        if bringEnabled then
            bringEnemies()
        end
    end
})

library:Init()
